<div class="profile">
  <h1>プロフィール</h1>

  <div class="profile_image">
    <%= image_tag 'codecamp_image.png' %>
  </div>

  <div class="profile_detail">
    <div class="label">ユーザー名</div>
    <div class="value"><%= @user_name %></div>
  </div>


  <div class="profile_detail">
    <div class="label">生年月日</div>
      <% if @birth_day.present? %>
        <div class="value"><%= @birth_day %></div>
      <% else %>
        <div class="value"><%= "未設定" %></div>
      <% end %>
  </div>

  <% if @birth_day.present? %>
    <% if @gender == "man" %>
      <div class="profile_detail">
        <div class="label">年齢</div>
        <div class="value"><%= @age %></div>
      </div>
    <% end %>
  <% end %>

  <% if @hometown.present? %>
    <div class="profile_detail">
      <div class="label">出身地</div>
      <div class="value"><%= @hometown %></div>
    </div>
  <% end %>

  <% if @skills.present? %>
    <div class="profile_detail">
      <div class="label">特技</div>
      <% @skills.each do |skill| %>
      <div class="value"><%= skill %></div>
      <% end %>
    </div>
  <% end %>

  <% if @remarks.present? %>
    <div class="profile_detail">
      <div class="label">ひとこと</div>
      <div class="value"><%= @remarks %></div>
    </div>
  <% end %>

</div>
